@model Tameenk.Models.RegisterViewModel
    @using Tameenk.Core.Domain.Enums;
<h1 class="txt-black txt-lr  md-lh xs-mar-bot txt-right sm-mar-bot col-xs-12">
    @Html.Raw(Tameenk.LangText.register_title)
</h1>

@using (Html.BeginForm("Register", "Account", new { ReturnUrl = @Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "frmshow", onsubmit="btnSubmit.disabled = true; return true;" }))
{
    @Html.AntiForgeryToken()

    if (ViewBag.islogin == 0)
    {
        <div class="col-xs-12 col-lg-12 col-md-12">
            <span style="color:red">@Html.ValidationSummary("", new { @class = "text-danger" })</span>
        </div>
    }
    <!--   <div class="col-xs-12 col-lg-12 col-md-12">
           <span class="input input--ichiro">
               <label class="input__label input__label--ichiro" for="full-name">
                   <span class="input__label-content input__label-content--ichiro">-->
    <!--   @Html.Raw(Tameenk.LangText.register_mobile) <= to be changed --> <!-- @Html.Raw(Tameenk.LangText.Register_FullName)-->
    <!-- </span>
        </label>
        <input class="input__field input__field--ichiro full-name" type="text" id="Name" name="FullName" value="" />
    </span>-->
    <!-- <span id="MobileError" style="color:red">@Html.ValidationMessageFor(m => m.Mobile)</span> <= to be changed -->
    <!--  </div>-->
    <div class="col-xs-12 col-lg-12 col-md-12">
        <span class="input input--ichiro">
            <label class="input__label input__label--ichiro" for="email">
                <span class="input__label-content input__label-content--ichiro">@Html.Raw(Tameenk.LangText.register_email)</span>
            </label>
            <input class="input__field input__field--ichiro email register-email" name="Email" id="Email" type="text" value="@ViewBag.registerModel.Email" />
        </span>
        <span id="EmailError" style="color:red" class="register-email-error">@Html.ValidationMessageFor(m => m.Email)</span>
        @*<span class="input input--ichiro">
            <input class="input__field input__field--ichiro email register-confirmEmail" type="text" id="ConfirmEmail" name="ConfirmEmail" value="@ViewBag.registerModel.ConfirmEmail" onblur="confirmEmail()" />

            <label class="input__label input__label--ichiro" for="email">
                <span class="input__label-content input__label-content--ichiro">@Html.Raw(Tameenk.LangText.register_email1)</span>
            </label>
        </span>
        <span id="ConfirmEmailError" style="color:red" class="register-confirmEmail-error">@Html.ValidationMessageFor(m => m.ConfirmEmail)</span>*@
    </div>
    <div class="col-xs-12 col-lg-12 col-md-12">
        <span class="input input--ichiro">
            <input class="input__field input__field--ichiro mobileno register-mobile" type="TEL" id="Mobile" name="Mobile" value="@ViewBag.registerModel.Mobile" />

            <label class="input__label input__label--ichiro" for="mobileno">
                <span class="input__label-content input__label-content--ichiro">
                    @Html.Raw(Tameenk.LangText.register_mobile)
                </span>
            </label>
        </span>
        <span id="MobileError" style="color:red" class="register-mobile-error">@Html.ValidationMessageFor(m => m.Mobile)</span>
    </div>
    <div class="col-xs-12 col-lg-12 col-md-12">
        <span class="input input--ichiro">
            <input class="input__field input__field--ichiro pass-to-show passwordre register-password" type="password" name="Password" value="@ViewBag.registerModel.Password" />

            <label class="input__label input__label--ichiro" for="passwordre">
                <span class="input__label-content input__label-content--ichiro">@Html.Raw(Tameenk.LangText.register_password)</span>
            </label>
            @if (System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName.Equals(LanguageTwoLetterIsoCode.En.ToString(), StringComparison.OrdinalIgnoreCase))
            {
                <i class="ic-icons-220 in-ico txt-black pointer show-password" style="position: absolute; top: 23px; right: 20px; transform: scale(1.5); transform-origin: left center; z-index: 999;"></i>

            }
            else
            {
                <i class="ic-icons-220 in-ico txt-black pointer show-password" style="position: absolute; top: 23px; left: 10px; transform: scale(1.5); transform-origin: left center; z-index: 999;"></i>

            }
        </span>
        <span id="RegisterPasswordError" style="color:red" class="register-password-error">@Html.ValidationMessageFor(m => m.Password, "")</span>
    </div>
    <div class="col-xs-12 col-lg-12 col-md-12">
        <p style="font-size: 12px;text-align: justify;">
            @Html.Raw(Tameenk.LangText.register_policy)
        </p>
    </div>
    <div class="col-xs-12 col-lg-12 col-md-12">
    </div>
}
<button id="btnSubmit" name="btnSubmit" class="bx-left btn sm pointer dis-block no-trans bx-left txt-white continue txt-brand bg-brand-hvr txt-xs bg-gr-main  circ-rdus l-shadow md-mar">@Html.Raw(Tameenk.LangText.register_txt_button) </button>