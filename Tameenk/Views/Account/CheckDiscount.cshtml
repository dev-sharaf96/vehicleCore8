@using (Html.BeginForm("CheckDiscount", "Account", new { ReturnUrl = @Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "frmshow", onsubmit = "btnSubmit.disabled = true; return true;" }))
{
    <div class="container customContainerCard">
        <div class="row col-lg-12 paddTop">
            <div class="col-lg-7 customContainerCardgrey">
                <div class="col-lg-8 floatLeft">
                    <h3 class="txt-black dis-block over-hidden sm-mar headerthreestyle">@Html.Raw(Tameenk.LangText.DeserveDiscountTitle)</h3>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-5 margB nationalIDEN ">
                        <input class="customInputsStyle " placeholder="@Html.Raw(Tameenk.LangText.NIN)" type="text" id="NIN" name="NIN" value="@Model.NIN" />
                        <span class="validationErr" id="NinReqError">
                            @Html.Raw(Tameenk.LangText.NinReq)
                        </span>
                    </div>
                </div>
                @if (Model.Captcha != null)
                {
                    <input type="hidden" name="Captcha.Token" value="@Model.Captcha.Token" />
                    <input type="hidden" name="Captcha.Captcha" value="@Model.Captcha.Captcha" />
                    <input type="hidden" name="Captcha.ExpiredInSeconds" value="@Model.Captcha.ExpiredInSeconds" />
                    <input type="hidden" name="Captcha.ExpiryDate" value="@Model.Captcha.ExpiryDate" />
                    <div class="col-lg-8 captchaClass">
                        <div class="col-xs-4 bx-right md-mar no-pd">
                            <span class="captcha-container">
                                <img class="captcha-img" alt="الرمز" title="الرمز" src="@Model.Captcha.Image">
                                <button type="submit" class="reload-btn" id="btnRefresh" name="ButtonType" value="Refresh"><i class="fas fa-sync"></i></button>
                            </span>
                        </div>
                        <div class="col-xs-3 bx-right md-mar no-pd margRi">
                            <div class="input-container" style="margin-top: 3px">
                                <input class="input-element" appFloatedLabel type="text" id="captchaCode" name="Captcha.Input" value="@Model.Captcha.Input" appNumberOnly autocomplete="off" maxlength="4" />
                                <label class="input-label" for="captchaCode"></label>
                                @*<span *ngFor="let error of validationErrors.captcha['captchaInput']" class="field-error" style="color:red;position:absolute;min-width: 140px">{{error | translate}}</span>*@
                            </div>
                        </div>
                        <div class="col-xs-5">
                            <span class="validationErr CustomCardReqError" id="CaptchaReqError">
                                @Html.Raw(Tameenk.LangText.CaptchaError)
                            </span>
                        </div>
                    </div>
                }

                <div class="col-lg-3 floatEN">
                    <button id="btnSubmit" onclick="return showValidation();" name="ButtonType" value="Save" class="mybtnCustomStyle bx-left btn sm pointer dis-block no-trans bx-left txt-white continue txt-brand bg-brand-hvr txt-xs bg-gr-main  circ-rdus l-shadow md-mar">@Html.Raw(Tameenk.LangText.Search) </button>
                </div>
            </div>
        </div>
    </div>

    <div class="">
        <div class="col-lg-10">
            @if (Model.CheckDiscountOutput != null)
            {
                if (Model.CheckDiscountOutput.ErrorCode == Tameenk.Services.Implementation.Policies.CheckDiscountOutput.ErrorCodes.EmptyReturnObject)
                {
                    <div class="errMessageDesign">
                        @Model.CheckDiscountOutput.ErrorDescription
                    </div>
                }
                else if (Model.CheckDiscountOutput.ErrorCode == Tameenk.Services.Implementation.Policies.CheckDiscountOutput.ErrorCodes.Success)
                {
                    <div class="successMessageDesign">
                        @Model.CheckDiscountOutput.ErrorDescription
                    </div>
                }
                else
                {
                    <div class="errMessageDesign">
                        @Html.Raw(Tameenk.LangText.ErrorGeneric)
                    </div>
                }

            }
        </div>
    </div>


}
<script>
    function showValidation()
    {
        if (NinInput.value == '')
        {
            NinReqError.style.display = "block";
            return false;
        }
        else
        {
            NinReqError.style.display = "none";
        }

        if (captchaCode.value == '')
        {
            CaptchaReqError.style.display = "block";
            return false;
        }
        else
        {
            CustomCardReqError.style.display = "none";
        }
        return true;
    }
 </script>