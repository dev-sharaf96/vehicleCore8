@model Tameenk.Models.MyVehiclesViewModel
@using Tameenk.Resources.Profile;
@using Tameenk.Core.Domain.Enums;
@{
    ViewBag.Title = Tameenk.LangText.MyVehicles;
}

<style>
    .input-group {
        position: relative;
        /* margin: 40px 0 20px; */
        display: inline-block;
    }

    .customInpStyle {
        font-size: 18px;
        padding: 10px 10px 10px 5px;
        /* display: block; */
        width: 300px;
        border: none;
        border-bottom: 1px solid #757575;
    }

        .customInpStyle:focus {
            outline: none;
        }

    .customLBLStyle {
        color: #999;
        font-size: 18px;
        font-weight: normal;
        position: absolute;
        pointer-events: none;
        right: 5px;
        top: 10px;
        transition: 0.2s ease all;
        -moz-transition: 0.2s ease all;
        -webkit-transition: 0.2s ease all;
    }

    .customInpStyle:focus ~ label,
    .customInpStyle:valid ~ label {
        top: -20px;
        font-size: 14px;
        color: #156494;
    }

    .bar {
        position: relative;
        display: block;
        width: auto;
    }

        .bar:before,
        .bar:after {
            content: '';
            height: 2px;
            width: 0;
            bottom: 1px;
            position: absolute;
            background: #156494;
            ;
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .bar:before {
            right: 50%;
        }

        .bar:after {
            left: 50%;
        }

    .customInpStyle:focus ~ .bar:before,
    .customInpStyle:focus ~ .bar:after {
        width: 50%;
    }

    .highlight {
        position: absolute;
        height: 60%;
        width: 100px;
        top: 25%;
        right: 0;
        pointer-events: none;
        opacity: 0.5;
    }

    .customInpStyle:focus ~ .highlight {
        -webkit-animation: inputHighlighter 0.3s ease;
        -moz-animation: inputHighlighter 0.3s ease;
        animation: inputHighlighter 0.3s ease;
    }

    /* animations */
    @@-webkit-keyframes inputHighlighter {
        from {
            background: #156494;
            ;
        }

        to {
            width: 0;
            background: transparent;
        }
    }

    @@-moz-keyframes inputHighlighter {
        from {
            background: #156494;
            ;
        }

        to {
            width: 0;
            background: transparent;
        }
    }

    @@keyframes inputHighlighter {
        from {
            background: #156494;
            ;
        }

        to {
            width: 0;
            background: transparent;
        }
    }

    .submitSearchBtn {
        height: 50px;
        border-radius: 11px;
        line-height: 10px;
        margin-top: 0px;
        width: 8%;
        text-align: center;
        font-size: 14px;
        color: white;
        background: #FBA72F !important;
        margin-right: 33px;
    }

        .submitSearchBtn:hover {
            background: #ffba57 !important;
        }

    .sectionprofViewTit {
        padding-top: 10px;
        padding-bottom: 10px;
        background-color: #efefef;
    }

    .not-active {
        pointer-events: none;
        cursor: default;
        text-decoration: none;
        color: black;
    }

    .previous {
        background-color: #ddd;
        color: white;
    }

    .next {
        background-color: #ddd;
        color: white;
    }

    .pagination {
        list-style-type: none;
        display: flex;
        justify-content: center;
    }

        .pagination a {
            color: black;
            float: left;
            text-decoration: none;
            display: inline-block;
            padding: 8px 16px;
        }

            .pagination a.active {
                background-color: #156495;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
                color: white;
            }

    a:hover {
        color: #FB9C65 !important;
    }
</style>

<section class="section profile-view min-height-vh">
    <div>
        @Html.Partial("~/Views/Home/SideBar.cshtml", EProfileSection.Vehicles)

        <div class="content col-xs-12 col-md-9 col-lg-10 content-view active" id="car">
            <div class="pd-inside">
                <h1 class="txt-lr txt-black md-mar-bot  col-xs-12 sectionprofViewTit">
                    @Html.Raw(Tameenk.LangText.MyVehicles)
                </h1>


                <div class="input-group">
                    <input type="tel" class='customInpStyle' id="sequenceOrCustomCardNumber" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label class='customLBLStyle'>@Html.Raw(ProfileResources.SequenceOrCustomCardNumber)</label>
                </div>

                <button onclick="SearchMyVehicles(1)" id="SearchMyVehicles" class='submitSearchBtn'> @ProfileResources.Search</button>
                <div id="MyVehiclesListDiv">
                    @Html.Partial("_MyVehiclesList", Model)
                </div>
            </div>
            <!-- pd inside -->
        </div>
    </div>
</section>

@section scripts{
    <script type="text/javascript">
    function DeleteVehicle(ctrl) {

            $('.iAgree').on('click', function(){
                var carId = $(ctrl).attr('href');

            var data = { vehicleID: carId };
            $.ajax({
                url: "@Url.Action("Delete", "Vehicle")",
                data: data,
                type: "GET",
                datatype: "json",
                success: function (result) {

                if (result.Success) {
                $(ctrl).closest('.vehicle-row').fadeOut(300);
                $('.popup-close').click();
                ctrl = null;

                } else {

                // Delete alert to make them pop up ...>
                alert('Sorry , you can\'t delete this vehicle');


                $('.popup-close').click();
                ctrl = null;
                }
                },
                error: function (result) {
                alert('error');
                ctrl = null;

                }
                });
                });
                $('.popup').show();
                $('.notAgree').on('click', function(){
                $('.popup-close').click();
                ctrl = null;
                });

                }

function SearchMyVehicles(pageNumer){
    var sequenceOrCustomCardNumberValue = $("#sequenceOrCustomCardNumber").val();
    var data = { sequenceOrCustomCardNumber: sequenceOrCustomCardNumberValue, pageIndex: pageNumer};
    $("#MyVehiclesListDiv").html("");

    $.ajax({
        url: "@Url.Action("SearchMyVehicles", "Profile")",
        data: data,
        type: "GET",
        datatype: "json",
        success: function(result) {
                $("#MyVehiclesListDiv").html(result);
        },
        error: function(result) {
            alert('error');
        }
        });
    }

    $( "#sequenceOrCustomCardNumber").keypress(function(e) {
        var  inputValueCus = $("#sequenceOrCustomCardNumber").val();
        if( inputValueCus.length >= 0)
        {
            let input;
            if (e.metaKey || e.ctrlKey) {
            return true;
            }
            if (e.which === 32) {
            return false;
            }
            if (e.which === 0) {
            return true;
            }
            if (e.which < 33) {
            return true;
            }
            
            input = String.fromCharCode(e.which);
            return !!/[\d\s]/.test(input);
        }
        else
        {
            inputValueCus='';
            return false;
        }
    });
    </script>
}
