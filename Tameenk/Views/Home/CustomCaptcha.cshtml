@model CaptchaMvc.Models.DefaultBuildInfoModel

@using CaptchaMvc.HtmlHelpers
<div class="col-xs-9 col-lg-6 col-md-6 sm-mar txt-left" style="margin-top: 0px;">
    <img id="@Model.ImageElementId" src="@Model.ImageUrl" />
    @Html.Hidden(Model.TokenElementId, Model.TokenValue)
</div>
@{
    string id = Guid.NewGuid().ToString("N");
    string functionName = string.Format("______{0}________()", Guid.NewGuid().ToString("N"));
    <script type="text/javascript">

        $(function () {
            $('#@id').show();
    });


    function @functionName {
            $('#@id').hide();
        $.post("@Model.RefreshUrl", { @Model.TokenParameterName: $('#@Model.TokenElementId').val() },
            function () {
                $('#@id').show();
            });
        return false;
    }
    </script>

    <a href="#@Model.InputElementId" id="@id" onclick="@functionName" style="display: none;">@Model.RefreshButtonText</a>
}

<div class="col-xs-9 col-lg-6 col-md-6 sm-mar txt-left" style="margin-top: 0px;     text-align: center;">
    <span class="input input--ichiro" style="margin-top: 0em !important;">
        @Html.TextBox(Model.InputElementId, null, new { @class = "input__field input__field--ichiro idnumber UserID", onchange = "checkRobotFunc()" })

        <label class="input-label input-label--ichiro" for="idnumber">
            <span class="input-label-content input-label-content--ichiro">@Html.Raw(Tameenk.LangText.Captcha)</span>
        </label>
    </span>

    <h4 style="color:red;">
        @Html.ValidationMessage(Model.InputElementId)
    </h4>
</div>